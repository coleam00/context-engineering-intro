# MCP Template - Example Environment Variables
# Copy to .env and fill in values for local development

# Core
NODE_ENV=development
PORT=8787
LOG_LEVEL=info

# Transports (enable/disable)
FEATURE_STDIO=true
FEATURE_HTTP=true
FEATURE_SSE=true
FEATURE_WS=false

# Security / Auth
API_KEY=CHANGE_ME
HMAC_SECRET=CHANGE_ME
# OAuth2 / OIDC (Client Credentials)
OAUTH_ISSUER_URL=https://issuer.example.com/
OAUTH_AUDIENCE=api://mcp-template
OAUTH_JWKS_URL=https://issuer.example.com/.well-known/jwks.json
# mTLS
MTLS_CA_CERT_PATH=
MTLS_REQUIRE_CLIENT_CERT=false

# Limits
REQUEST_MAX_BYTES=1048576
RATE_LIMIT_RPS=20
CONCURRENCY_MAX=64

# OpenTelemetry (optional)
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_RESOURCE_ATTRIBUTES=service.name=mcp-template

